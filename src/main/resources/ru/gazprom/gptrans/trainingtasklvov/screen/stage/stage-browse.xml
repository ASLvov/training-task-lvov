<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://stageBrowse.caption"
        focusComponent="stagesTable">
    <data readOnly="true">
        <collection id="stagesDc"
                    class="ru.gazprom.gptrans.trainingtasklvov.entity.Stage">
            <fetchPlan extends="_base">
                <property name="invoice" fetch="JOIN">
                    <property name="number"/>
                </property>
                <property name="serviceCompletionCertificate" fetch="JOIN">
                    <property name="number"/>
                </property>
            </fetchPlan>
            <loader id="stagesDl">
                <query>
                    <![CDATA[select e from ttl_Stage e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="stagesTable" spacing="true">
        <groupTable id="stagesTable"
                    width="100%"
                    dataContainer="stagesDc">
            <actions>
<!--                <action id="add" type="add"/>-->
<!--                <action id="create" type="create"/>-->
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="dateFrom"/>
                <column id="dateTo"/>
                <column id="amount"/>
                <column id="vat"/>
                <column id="totalAmount"/>
                <column id="description"/>
                <column id="invoice"/>
                <column id="serviceCompletionCertificate"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
<!--                <button id="addBtn" action="stagesTable.add"/>-->
<!--                <button id="createBtn" action="stagesTable.create"/>-->
                <button id="editBtn" action="stagesTable.edit"/>
                <button id="refreshBtn" action="stagesTable.refresh"/>
                <button id="removeBtn" action="stagesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
