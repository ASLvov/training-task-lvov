<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://invoiceBrowse.caption"
        focusComponent="invoicesTable">
    <data readOnly="true">
        <collection id="invoicesDc"
                    class="ru.gazprom.gptrans.trainingtasklvov.entity.Invoice">
            <fetchPlan extends="_base">
                <property name="stage" fetchPlan="_base">
                    <property name="contract" fetch="JOIN">
                        <property name="customer" fetchPlan="_base"/>
                        <property name="performer" fetchPlan="_base"/>
                        <property name="number"/>
                        <property name="customerSigner"/>
                        <property name="performerSigner"/>
                    </property>
                </property>
            </fetchPlan>
            <loader id="invoicesDl">
                <query>
                    <![CDATA[select e from ttl_Invoice e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="invoicesTable" spacing="true">
        <filter id="filter"
                dataLoader="invoicesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="invoicesTable"
                    width="100%"
                    dataContainer="invoicesDc">
            <actions>
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="date"/>
                <column id="amount"/>
                <column id="vat"/>
                <column id="totalAmount"/>
                <column id="description"/>
                <column id="files"/>
                <column id="stage"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="editBtn" action="invoicesTable.edit"/>
                <button id="refreshBtn" action="invoicesTable.refresh"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
