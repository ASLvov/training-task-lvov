<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://stageEdit.caption"
        focusComponent="form">
    <data>
        <instance id="stageDc"
                  class="ru.gazprom.gptrans.trainingtasklvov.entity.Stage">
            <fetchPlan extends="_base">
                <property name="invoice" fetch="JOIN">
                    <property name="number"/>
                </property>
                <property name="serviceCompletionCertificate" fetch="JOIN">
                    <property name="number"/>
                </property>
                <property name="contract" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="stageDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <dateField id="dateFromField" property="dateFrom"/>
                <dateField id="dateToField" property="dateTo"/>
                <textField id="amountField" property="amount"/>
                <textField id="vatField" property="vat" editable="false"/>
                <textField id="totalAmountField" property="totalAmount" editable="false"/>
                <textArea id="descriptionField" property="description" rows="5"/>
                <entityPicker id="invoiceField" property="invoice" editable="false"/>
                <entityPicker id="serviceCompletionCertificateField" property="serviceCompletionCertificate"
                              editable="false"/>
                <entityPicker id="contractField" property="contract" editable="false" required="true"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
            <button id="creteClosingDocsBtn" caption="Создать закрывающие документы"/>
        </hbox>
    </layout>
</window>
