<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet author="lvov" id="1">
        <insert tableName="ttl_Status">
            <column name="id" valueComputed="gen_random_uuid()"/>
            <column name="CODE" value="NEW"/>
            <column name="NAME" value="Новый"/>
        </insert>
        <insert tableName="ttl_Status">
            <column name="id" valueComputed="gen_random_uuid()"/>
            <column name="CODE" value="TO_APPROVAL"/>
            <column name="NAME" value="На согласовании"/>
        </insert>
        <insert tableName="ttl_Status">
            <column name="id" valueComputed="gen_random_uuid()"/>
            <column name="CODE" value="ACTIVE"/>
            <column name="NAME" value="Активен"/>
        </insert>
        <insert tableName="ttl_Status">
            <column name="id" valueComputed="gen_random_uuid()"/>
            <column name="CODE" value="FINISHED"/>
            <column name="NAME" value="Завершен"/>
        </insert>
        <insert tableName="ttl_Status">
            <column name="id" valueComputed="gen_random_uuid()"/>
            <column name="CODE" value="CANCELED"/>
            <column name="NAME" value="Отменён"/>
        </insert>
    </changeSet>
    <changeSet id="2" author="lvov">
        <createSequence cycle="true"
                        incrementBy="1"
                        maxValue="999999999"
                        minValue="1"
                        schemaName="public"
                        sequenceName="invoice_number_seq"
                        startValue="1"/>
        <createSequence cycle="true"
                        incrementBy="1"
                        maxValue="999999999"
                        minValue="1"
                        schemaName="public"
                        sequenceName="service_completion_cert_number_seq"
                        startValue="1"/>
    </changeSet>
</databaseChangeLog>
